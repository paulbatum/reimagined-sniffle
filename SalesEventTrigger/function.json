{
  "bindings": [
    {
      "type": "eventHubTrigger",
      "name": "eventHubMessages",
      "direction": "in",
      "eventHubName": "sales",
      "connection": "SalesEventsConnection",
      "cardinality": "many",
      "consumerGroup": "$Default"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "salesOutput",
      "databaseName": "TissueBox",
      "collectionName": "Sales",
      "createIfNotExists": "true",
      "connectionStringSetting": "snifflescosmosdb_DOCUMENTDB"
    },
    {
      "type": "blob",
      "direction": "out",
      "name": "highValueReceiptOutputBlob",
      "path": "receipts-high-value/{rand-guid}",
      "connection": "secretstorageconnection"
    },
    {
      "type": "blob",
      "direction": "out",
      "name": "receiptOutputBlob",
      "path": "receipts/{rand-guid}",
      "connection": "secretstorageconnection"
    }
  ]
}
